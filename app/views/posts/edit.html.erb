<!-- 幅の設定 -->
<div class = "col-md-8">

  <h1>ブログ記事編集</h1>

  <%= form_for @post do |f| %>
    <div class = "form-group"</div>
      <%= f.label "タイトル" %>
      <%= f.text_field :title,class: "form-control" %>
    </div>

    <div class = "form-group"</div>
      <%= f.label "カテゴリ" %>
      <%= f.text_field :category,class: "form-control" %>
    </div>

    <div class = "form-group"</div>
      <%= f.label "本文" %>
      <%= f.text_area :body,class: "form-control" %>
    </div>
    <%= f.submit '編集する', class: "btn btn-primary" %>

  <% end %>

</div>
